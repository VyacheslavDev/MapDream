<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="3dp">

    <TextView
        android:id="@+id/sortOfDate_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <android.support.v7.widget.CardView
        android:id="@+id/CardView_visits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:padding="7dp">

            <TextView
                android:id="@+id/date_visits_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="Date"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ImageView
                android:id="@+id/image_visits_card"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/mdtp_transparent_black"
                android:maxHeight="50dp"
                android:maxWidth="55dp" />

            <TextView
                android:id="@+id/description_visits_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/name_visits_card"
                android:layout_below="@+id/name_visits_card"
                android:text="Discription"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true" />


            <TextView
                android:id="@+id/name_visits_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@+id/image_visits_card"
                android:text="Name"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_alignBottom="@+id/date_visits_card" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>